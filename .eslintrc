{
  "root": true,
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "vue/setup-compiler-macros": true
  },
  "rules": {
    "eol-last": ["error", "always"],
    "no-trailing-spaces": "error",
    "prefer-const": ["error", { "destructuring": "all" }]
  }
}
